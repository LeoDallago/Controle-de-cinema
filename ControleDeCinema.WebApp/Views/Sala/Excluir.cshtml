@model ControleDeCinema.WebApp.Models.SalaViewModels.ExcluirSalaViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Excluir Sala";
}

<div class="container">
    <h1 class="fs-3">Deseja excluir a Sala: <strong>@Model.Numero</strong></h1>
    <form class="col-md-6 justfiy-content-center" asp-action="Excluir">
        <button class="btn btn-danger">
            <i class="bi bi-trash me-1"></i>
            Excluir
        </button>

        <a class="btn btn-dark bi bi-arrow-left" href="/sala/listar">Voltar</a>
    </form>
</div>


